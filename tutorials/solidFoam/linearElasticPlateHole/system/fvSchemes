FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

d2dt2Schemes
{
    default            steadyState;
}

ddtSchemes
{
    default            steadyState;
}

gradSchemes
{
    //default            extendedLeastSquares 0;
    default            leastSquares;
}

divSchemes
{
    default            Gauss linear;
}

laplacianSchemes
{
    default            none;
    //laplacian(DD,D)    Gauss linear skewCorrected 1.0;
    laplacian(DD,D)    Gauss linear corrected;
}

snGradSchemes
{
    default            none;
}

interpolationSchemes
{
    default            none;
    interpolate(impK)  linear;
}

