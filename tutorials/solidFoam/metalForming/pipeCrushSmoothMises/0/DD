FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      DD;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    anvilLoading
    {
        type           fixedDisplacement;
        displacementSeries
        {
            fileName       "$FOAM_CASE/constant/timeVsDisp";
            outOfBounds    clamp;
        }
        value          uniform ( 0 0 0 );
    }

    pipeContact
    {
        type            solidContact;
        master          no;
        shadowPatch     anvilContact;
        value           uniform (0 0 0);
    }

    anvilContact
    {
        type            solidContact;
        master          yes;
        rigidMaster     yes;
        shadowPatch     pipeContact;
        normalContactModel standardPenalty;
        standardPenaltyNormalModelDict
        {
            penaltyScale     1;
            relaxationFactor 0.02;
        }
        frictionContactModel standardPenalty;
        standardPenaltyFrictionModelDict
        {
            relaxationFactor 0.02;
            penaltyScale     1;
            frictionLaw     coulomb;
            frictionLawDict
            {
                frictionCoeff   0.3;
            }
        }
        value           uniform (0 0 0);
    }

    inside
    {
        type            solidTraction;
        traction        uniform ( 0 0 0 );
        pressure        uniform 0;
        value           uniform (0 0 0);
    }

    bottom
    {
        type            solidSymmetry;
        patchType       symmetryPlane;
        value           uniform (0 0 0);
    }

    left
    {
        type            solidSymmetry;
        patchType       symmetryPlane;
        value           uniform (0 0 0);
    }

    back
    {
        type            empty;
    }

    front
    {
        type            empty;
    }
}

// ************************************************************************* //
