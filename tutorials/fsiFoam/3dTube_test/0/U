FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    symmetry-x
    {
        type         symmetry;
    }
    symmetry-y
    {
        type         symmetry;
    }
    outlet
    {
        type         zeroGradient;
    }
    inlet
    {
        type         fixedValue;//zeroGradient;
	value		uniform (0 0 0.5);
    }
    walls
    {
        type         movingWallVelocity;
        value        uniform (0 0 0);
    }
}


