FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    floor
    {
        type            mixedTemperature;
        refValue        uniform 300;
        refGradient     uniform 0;
        valueFraction   uniform 1;
        value           uniform 300;
    }
    ground
    {
        type 	        fixedValue;
	value           uniform 350;
    }
    fixedWalls
    {
        type            zeroGradient;
    }
}


