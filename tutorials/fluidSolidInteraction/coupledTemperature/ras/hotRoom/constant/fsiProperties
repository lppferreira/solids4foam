FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fsiProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fluidSolidInterface    thermoCoupling;

thermoCouplingCoeffs
{
    // Solid interface patch and faceZone
    solidPatch           floor;
    solidZone            floorZone;

    // Fluid interface patch and faceZone
    fluidPatch           floor;
    fluidZone            floorZone;

    // Tolerance for the energy loop within each time-step
    energyTolerance      1e-5;

    // Maximum number of outer energy-FSI loop correctors within each time-step
    nOuterCorr           5;

    // Enable/disable coupling from the start
    coupled              no;

    // Enable/disable energy coupling
    conjugate            yes;

    // Method for transferring information between the interfaces
    interfaceTransferMethod directMap;
    //interfaceTransferMethod RBF;
    //interfaceTransferMethod GGI;
}

