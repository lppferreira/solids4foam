FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default            Euler;
}

gradSchemes
{
    default            Gauss linear;
}

divSchemes
{
    default            Gauss linear;
}

laplacianSchemes
{
    default            none;
    laplacian(kappa,T) Gauss linear corrected;
}

snGradSchemes
{
    default            none;
}

interpolationSchemes
{
    default            none;
    interpolate(k) linear;
    interpolate((C*rho)) linear;
}

