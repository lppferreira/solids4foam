FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      solidProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solidModel     thermalSolid;

thermalSolidCoeffs
{
    // Maximum number of correctors
    nCorrectors    1000;

    // Solution tolerance
    solutionTolerance 1e-08;

    // Alternative solution tolerance
    alternativeTolerance 1e-08;

    // Write frequency for the residuals
    infoFrequencyT  100;
}


