FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      meshSmootherDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Smoothing method
type                  explicitVolume;

// Smoother settings
explicitVolumeCoeffs
{
    // Optional: cell zone(s) to smooth
    // If this entry is not found then the entire mesh is smoothed
    //cellZones             (cellZoneName);

    // Relaxation/scale factor
    lambda                0.5;

    // Use simple arithmetric weights
    simpleAverageWeights  no;

    // Number of outer smoothing iterations
    nCorrectors           100;

    // Overwrite option
    // no: writes to the next time-step
    // yes: overwrites the mesh
    overwrite             yes;

    // Advect fields
    advectFields no;

    // If the angle between two faces is greater than this feature angle then
    // this sharp edge is preserved 
    // featureAngle is only used if correctFeatureEdges is set to true
    // It is often more robust to use flat and fixed patches below to control
    // feature edges
    correctFeatureEdges   no;
    featureAngle          45;

    // Patches that should stay flat
    flatPatches
    (
        "symmz"
        "front"
        "symmx"
        "loading"
        "fixed"
    );

    // Faces/points on fixed patches do not move
    fixedPatches
    (
        "patchThatWillNotBeSmoothed"
    );
}

// ************************************************************************* //
